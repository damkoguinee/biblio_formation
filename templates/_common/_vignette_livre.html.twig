<div class="card mb-3 mx-2" style="width: 240px;">
    <div class="row g-0">
        <div class="col-md-4">
            {% if livre.couverture %}
                <img src="{{chemin_images ~ livre.couverture}}" class="img-fluid rounded-start" alt="couverture {{livre.titre}}">
            {% else %}
                <img src="images/livredefaut.png" class="img-fluid rounded-start" alt="couverture" >                
            {% endif %}
            
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h6 class="card-title">{{ livre.titre }}</h6>
                <p class="card-text">
                    <a href="{{ path('app_home_auteur', {id: livre.auteur.id}) }}" >{{ livre.auteur.identite }}</a>
                </p>
                <p class="card-text">
                    <small class="text-body-secondary">

                    </small>
                </p>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <a href="{{path('app_home_livre', {id: livre.id})}}" class="card-link"><i class="fa-solid fa-info" style="color: #511f31;"></i></a>

                {% if is_granted("ROLE_LECTEUR") and livre.disponible %}
                    <a href="{{path('app_espace_lecteur_emprunter', {id: livre.id})}}" class="card-link"><i class="fa fa-shopping-cart"></i></a>
                {% endif %}

                {% if is_granted("ROLE_LECTEUR") %}
                    <a href="{{path('app_reservation_livre', {id: livre.id})}}" class="card-link"><i class="fa fa-cart-plus"></i></a>
                {% endif %}

            </div>
        </div>
    </div>
</div>